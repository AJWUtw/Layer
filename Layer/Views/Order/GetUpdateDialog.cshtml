@model eSaleModel.Order

<form id="updateOrderForm" enctype="multipart/form-data">
    @Html.TextBoxFor(model => model.OrderId, new { @class = "hidden", @Value = ViewBag.OrderId })
    <table>
        <tr>
            <th>
                @Html.LabelFor(model => model.CustName, htmlAttributes: new { @class = "control-label col-md-2" })
            </th>
            <th>
                @Html.DropDownListFor(model => model.CustName, (SelectList)ViewBag.CustNameData)
            </th>
        </tr>
        <tr>
            <th>
                @Html.LabelFor(model => model.EmpName, htmlAttributes: new { @class = "control-label col-md-2" })
            </th>
            <th>
                @Html.DropDownListFor(model => model.EmpName, (SelectList)ViewBag.EmpNameData)
            </th>
        </tr>
        <tr>
            <th>
                @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label col-md-2" })
            </th>
            <th>
                @Html.TextBoxFor(model => model.OrderDate, new { @type = "date", @Value = ViewBag.OrderDate.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
            </th>
            <th>
                @Html.LabelFor(model => model.RequiredDate, htmlAttributes: new { @class = "control-label col-md-2" })
            </th>
            <th>
                @Html.TextBoxFor(model => model.RequiredDate, new { @type = "date", @Value = ViewBag.RequiredDate.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.RequiredDate, "", new { @class = "text-danger" })
            </th>
        </tr>
        <tr>
            <th>
                @Html.LabelFor(model => model.ShippedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            </th>
            <th>
                @Html.TextBoxFor(model => model.ShippedDate, new { @type = "date", @Value = ViewBag.ShippedDate.ToString("yyyy-MM-dd") })
